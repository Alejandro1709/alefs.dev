---
import Layout from '../layouts/Layout.astro';
---

<Layout title="alefs.dev | Home">
  <main class="main">
    <h1 class="heading">alefsdev</h1>
    <ul class="links">
      <li>
        <a href="https://www.twitch.tv/alefsdev" target="_blank">Twitch</a>
      </li>
      <li>
        <a href="https://www.instagram.com/alefsdev" target="_blank">Instagram</a>
      </li>
      <li>
        <a href="https://www.github.com/alejandro1709" target="_blank">Github</a>
      </li>
      <li>
        <a href="https://www.youtube.com/@alefsdev" target="_blank">Youtube</a>
      </li>
      <li>
        <a href="mailto:contacto@alefs.dev" target="_blank">Contacto</a>
      </li>
    </ul>
  </main>
</Layout>

<style>
  .main {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
  }
  .heading {
    text-align: center;
    font-size: 5rem;
    font-weight: 700;
  }

  .links {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    list-style: none;
    padding: 0;
    margin: 0 auto;
    width: 26.25rem;
  }

  .links li {
    font-size: 1rem;
    font-weight: 700;
    transition: all 0.2s ease-in-out;
  }

  .links li a {
    color: white;
    text-decoration: none;
  }

  .links li:hover {
    transform: scale(1.1);
    text-decoration: underline;
  }
</style>
